---
import { Icon } from 'astro-icon/components';

interface Props {
  textBold: string;
  text?: string;
}

const { textBold, text =  'Just do it right' } = Astro.props;

---

<section class="bg-blue-50 dark:bg-slate-800 not-prose">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4 text-md text-center font-medium">
    <span class="font-bold">
      <Icon name="tabler:circle-check" class="w-5 h-5 inline-block align-text-bottom" />
    </span>
    <span class="font-bold">{textBold}</span> {text}
  </div>
</section>
