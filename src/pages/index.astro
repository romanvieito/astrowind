<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Join Waitlist',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:square-rounded-arrow-right',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AbsIn5 Hero Image' }}
  >
    <Fragment slot="title">
      Free App <span class="hidden xl:inline">for getting</span>
      <span class="text-accent dark:text-white highlight"> in shape</span> + AI
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">AbsIn5</span> is a free, personalize workout assistant</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">AbsIn5: Get In Shape.</span>
      suitable for busy people
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

