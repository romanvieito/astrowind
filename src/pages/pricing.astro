---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <script>
    import { trackEvent } from '~/utils/mixpanel-config';

    // Track the event when the page loads
    document.addEventListener('DOMContentLoaded', () => {
      trackEvent('Pricing Page View');
    });
  </script>

  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="A perfect fit for busy people"
    subtitle="Choose the perfect plan that aligns with your cosmic goals."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    prices={[
      {
        title: 'free forever',
        subtitle: 'Try the app. Access to some features',
        price: '0',
        period: '/ month',
        callToAction: {
          // target: '_blank',
          text: 'Get Started for Free',
          href: '/aicoach',
        },
      },
      {
        title: 'pro',
        subtitle: 'Real time feedback. Advanced AI coach',
        price: 10,
        period: '/ Month',
        callToAction: {
          // target: '_blank',
          text: 'Upgrade to Pro',
          href: '/aicoach',
        },
        hasRibbon: true, // TODO: condicion usada para track google ads conversion
        ribbonTitle: 'Best',
      },
      // {
      //   title: 'Enterprise',
      //   subtitle: 'Api Access. For custom requirements',
      //   price: "Custom",
      //   period: '/ Month',
      //   callToAction: {
      //     target: '_blank',
      //     text: "Let's talk",
      //     href: '#',
      //   },
      // },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing our plans"
    columns={2}
    items={[
      {
        title: 'Money-back Guarantee',
        description:
          'Offer a satisfaction guarantee with a risk-free trial or refund option for users who may want to explore before fully committing.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clearly displayed pricing details for each plan, with no hidden costs or unexpected charges.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Secure payment gateways to protect your financial information during transactions.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Instant Access',
        description: `Immediate access to your chosen plan's features and templates upon subscription.`,
        icon: 'tabler:accessible',
      },
      {
        title: 'Multi-Currency Support',
        description:
          'Include multi-currency payment options to cater to global users, enhancing accessibility and convenience for international customers.',
        icon: 'tabler:world',
      },
      {
        title: 'Premium support',
        description: 'Questions answered via chat or email, every calendar day.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A guided journey from plans to creativity"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Sign Up / Log In',
        icon: 'tabler:number-1',
      },
      {
        title: 'Explore plans',
        icon: 'tabler:number-2',
      },
      {
        title: 'Select a plan',
        icon: 'tabler:number-3',
      },
      {
        title: 'Enter payment details',
        icon: 'tabler:number-4',
      },
      {
        title: 'Confirmation',
        icon: 'tabler:number-5',
      },
      {
        title: 'Download and start using the app',
        icon: 'tabler:number-6',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Choosing the right plan is important, and we're here to answer your questions. If you have queries about our pricing options, you're in the right place."
    columns={1}
    items={[
      {
        title: 'Is customer support available?',
        description:
          'Yes! We offer support via chat and email.',
      },
      {
        title: 'Is there a trial period for the different plans?',
        description:
          'While we donâ€™t offer trial periods for our plans, you can use the app free forever to access the basic features.',
      },
      {
        title: 'Can I switch between plans?',
        description:
          'Certainly! You can easily upgrade or downgrade your plan, at any time, to find the one that best suits your needs.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept major credit cards and online payment methods to ensure a convenient and secure transaction process.',
      },
      {
        title: 'Are there any hidden fees beyond the displayed cost?',
        description:
          'No, the subscription cost covers all the features listed under each plan. There are no hidden fees or extra charges.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to boost your shape?"
    subtitle="Join our community of satisfied members who want to transform their fitness with our app."
    actions_sign_in={[
      {
        variant: 'primary',
        text: 'Start Coach',
        href: 'https://github.com/onwidget/astrowind',
        target: '_blank',
        icon: 'tabler:square-rounded-arrow-right',
      },
    ]}
    actions_sign_out={[
      {
        variant: 'primary',
        text: 'Sign in / up',
        href: '/sign-in',
        icon: 'tabler:square-rounded-arrow-right',
      },
    ]}
  />
</Layout>
